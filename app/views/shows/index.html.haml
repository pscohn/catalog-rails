%h1
  All Shows
= link_to 'New Show', new_show_path
%table
  %tr
    %th
      Title
    %th
      Seasons
    %th
      Episodes
    %th
      Total Watched
    %th
      Next Episode
    %th{:colspan => "4"}
  - @shows.each do |show|
    %tr
      %td
        = show.title
      %td
        = show.num_seasons
      %td
        = show.num_episodes
      %td
        = show.num_watched
      %td
        %a{:href => "http://google.com/#q=#{show.title} season #{show.next_episode.season.number} episode #{show.next_episode.number}", :target => "blank"}
          season #{show.next_episode.season.number} episode #{show.next_episode.number}
      %td
        = link_to "Show", show_path(show)
      %td
        = link_to "Edit", edit_show_path(show)
      %td
        = link_to "Delete", show_path(show), method: :delete, data: {confirm: 'Are you sure?'}
      %td
        = link_to 'Watched', show_season_episode_path(show, show.next_episode.season, show.next_episode), method: :patch
