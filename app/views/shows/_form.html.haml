= form_for @show do |f|
  - if @show.errors.any?
    #error_explanation
      %h2
        #{pluralize(@show.errors.count, "error")} found:
      %ul
        - @show.errors.full_messages.each do |msg|
          %li
            = msg
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.submit
