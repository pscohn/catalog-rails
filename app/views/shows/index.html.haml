%h1
  All Shows
= link_to 'New Show', new_show_path
%table
  %tr
    %th
      Title
    %th
      Seasons
    %th{:colspan => "3"}
  - @shows.each do |show|
    %tr
      %td
        = show.title
      %td
        = show.num_seasons
      %td
        = link_to "Show", show_path(show)
      %td
        = link_to "Edit", edit_show_path(show)
      %td
        = link_to "Delete", show_path(show), method: :delete, data: {confirm: 'Are you sure?'}
